<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- מאפשר גישה לכל קובצי ה־cache (כולל PDF/תמונות שנוצרים שם) -->
    <cache-path
        name="cache"
        path="." />

    <!-- מאפשר גישה לכל קבצי filesDir (אם בעתיד נשמור שם) -->
    <files-path
        name="files"
        path="." />

    <!-- מאפשר גישה ל־external files של האפליקציה (Android/data/<pkg>/files/...) -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- מאפשר גישה לתיקיות חיצוניות כלליות (כמו Downloads) במידת הצורך -->
    <external-path
        name="external"
        path="." />

</paths>
